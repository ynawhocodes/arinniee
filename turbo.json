{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
      "build": {
          "dependsOn": ["^build"],
          "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
          "env": ["NODE_ENV"]
      },
      "web#build": {
          "dependsOn": ["^build"],
          "env": ["NEXT_PUBLIC_SUPABASE_BASE_URL", "NEXT_PUBLIC_SUPABASE_API_KEY", "NEXT_PUBLIC_GA_MEASUREMENT_ID"]
      },
      "lint": {},
      "check-types": {},
      "dev": {
          "cache": false,
          "persistent": true
      },
      "clean": {
          "cache": false
      }
  }
}